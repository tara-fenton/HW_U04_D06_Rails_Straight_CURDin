<h2>
  <%= @cheese.name %>
</h2>

<p>
  <strong>Milk Type:</strong>
  <%= @cheese.milk_type %>
</p>

<p>
  <img src="<%= @cheese.image_url %>">
</p>

<p>
  <strong>Description:</strong>
  <%= @cheese.description %>
</p>

<p>
  <strong>STANK:</strong>
  <%= @cheese.stank_level %>
</p>
<p>
  <strong>Country:</strong>
  <%= @cheese.country_id %>
</p>
<% if user_signed_in? %>
  <%= form_with model: @favorite do |f| %>
    <%= f.hidden @cheese.id %>
    <%= f.hidden current_user.id %>
    <%= f.submit "Add Cheese to Favorites" %>
  <% end %>
<% end %>

<a href='/cheeses/<%= @cheese.id %>/edit'>Edit </a>
